<web-app>
 <description>Servlet CupiFlights</description>
 <!-- SERVLETS -->
 <servlet>
  <servlet-name>ResultadoPost</servlet-name>
  <servlet-class>interfaz.ServletCupiFlightsPost</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>ResultadoGet</servlet-name>
  <servlet-class>interfaz.ServletCupiFlightsGet</servlet-class>
 </servlet>
 <!-- MAPPING -->
 <servlet-mapping>
  <servlet-name>ResultadoPost</servlet-name>
  <url-pattern>/resultadoPost.htm</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>ResultadoGet</servlet-name>
  <url-pattern>/resultadoGet.htm</url-pattern>
 </servlet-mapping>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
